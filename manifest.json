{
  "manifest_version": 3,
  "name": "My Happiness",
  "version": "1.0.1",
  "description": "Track your daily happiness",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/logo16.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "permissions": [
    "storage"
  ]
}